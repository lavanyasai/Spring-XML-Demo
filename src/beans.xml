<?xml version="1.0" encoding="UTF-8" ?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="abcActor" class="com.stackroute.domain.Actor">
        <constructor-arg name="name" index="0" value="ABC" type="String"/>
        <constructor-arg name="gender" index="1" value="Female" type="String"/>
        <constructor-arg name="age" index="2" value="12" type="int"/>
    </bean>

    <bean id="pqrActor" class="com.stackroute.domain.Actor">
        <constructor-arg name="name" index="0" value="PQR" type="String"/>
        <constructor-arg name="gender" index="1" value="Female" type="String"/>
        <constructor-arg name="age" index="2" value="12" type="int"/>
    </bean>

    <bean id="xyzActor" class="com.stackroute.domain.Actor">
        <constructor-arg name="name" index="0" value="XYZ" type="String"/>
        <constructor-arg name="gender" index="1" value="Female" type="String"/>
        <constructor-arg name="age" index="2" value="12" type="int"/>
    </bean>

    <bean id="Movie A, Movie B" class="com.stackroute.domain.Movie" scope="prototype">
        <constructor-arg>
            <list>
                <ref bean="abcActor"/>
                <ref bean="pqrActor"/>
                <ref bean="xyzActor"/>
            </list>
        </constructor-arg>
    </bean>

</beans>